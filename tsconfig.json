{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["next-auth"],          // ðŸ‘ˆ pulls in next-auth + your augmentations
    "baseUrl": ".",                  // ðŸ‘ˆ root of the project
    "paths": {
      "@/*": ["*"]                   // ðŸ‘ˆ so "@/components/Provider" resolves correctly
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types",                         // ðŸ‘ˆ include your custom NextAuth types
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
